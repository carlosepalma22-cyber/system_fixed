def validar_contrasena(contrasena):
    errores = []
    # Longitud
    if len(contrasena) < 8:
        errores.append("La contraseña debe tener al menos 8 caracteres.")
    # Mayúsculas, minúsculas, números, caracteres especiales
    if not any(c.isupper() for c in contrasena):
        errores.append("Debe incluir al menos una letra mayúscula.")
    if not any(c.islower() for c in contrasena):
        errores.append("Debe incluir al menos una letra minúscula.")
    if not any(c.isdigit() for c in contrasena):
        errores.append("Debe incluir al menos un número.")
    if not any(c in '!@#$%^&*' for c in contrasena):
        errores.append("Debe incluir al menos un carácter especial (!@#$%^&*)")

    if not errores:
        return True, "Contraseña válida."
    else:
        return False, errores

# Ejemplo de uso
usuario = input("Ingrese su usuario: ")
pwd = input("Ingrese su contraseña: ")
valido, mensaje = validar_contrasena(pwd)
if valido:
    print(mensaje) # Contraseña válida.
else:
    print("Errores:", mensaje) # Lista de errores
